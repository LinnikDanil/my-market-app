<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="create_items_table" author="DLinnik">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <tableExists tableName="items"/>
            </not>
        </preConditions>

        <createTable tableName="items">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="img_path" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE items ADD CONSTRAINT price_check CHECK (price >= 0);
        </sql>

        <rollback>
            <dropTable tableName="items" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
